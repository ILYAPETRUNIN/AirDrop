@import './var';
@import './mixins';
@import './base';

useFont($font1)
useFont($font2)

.page-enter-active, .page-leave-active {
  transition: opacity .5s;
}
.page-enter, .page-leave-active {
  opacity: 0;
}


.app
    .gradient-text
      gradienLinear('text',$dark.secondary 21.26%,$dark.primary 66.55%,262.17deg)
      &_horizontal
        gradienLinear('text',$dark.secondary 21.26%,$dark.primary 66.55%,265.34deg)
        display: table;
    .gradient-block
      &_blue
        gradienLinear('block',rgba(7, 196, 239, 0.5) 0%,rgba(7, 196, 239, 0.15) 100%,180deg)

      
    .gradient-frame
      flexy(row,center,center,nowrap)
      position relative
      z-index 0
      &::after
        content:''
        position:absolute
        top: -5px;
        left: -5px;
        right: -5px;
        bottom: -5px;
        gradienLinear('block',#21D4FD -9.98%,#E40ECF 62.2%,262.17deg)
        filter: blur(30px);
        opacity:0.8
        z-index -1
        animation: flash 10s ease-in-out 0s infinite;
    setFont('LabGrotesque',normal,normal)
    a{
        text-decoration none
    }

